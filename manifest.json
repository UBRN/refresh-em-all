{
    "manifest_version": 3,
    "name": "Hard Reload All Tabs",
    "version": "1.0",
    "description": "Refresh all tabs and bypass cache, like Ctrl+Shift+R.",
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Hard Reload All Tabs",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}
